<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/birthdayPerson"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etBirthdayDude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Whose birthday is it?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/wellWisher"
        android:layout_width="0dp"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/birthdayPerson"
        app:layout_constraintStart_toStartOf="@+id/birthdayPerson"
        app:layout_constraintTop_toBottomOf="@+id/birthdayPerson">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etFromDude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Who is wishing?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@id/wellWisher"
        app:layout_constraintStart_toStartOf="@id/wellWisher"
        app:layout_constraintTop_toBottomOf="@id/wellWisher" />

</androidx.constraintlayout.widget.ConstraintLayout>